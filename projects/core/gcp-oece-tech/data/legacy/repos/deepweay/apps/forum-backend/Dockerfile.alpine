FROM python:3.11-alpine

# è®¾ç½®å·¥ä½œç›®å½•
WORKDIR /app

# å®‰è£…ç³»ç»Ÿä¾èµ–ï¼ˆæœ€å°åŒ–ï¼‰
RUN apk add --no-cache \
    gcc \
    musl-dev \
    libffi-dev \
    openssl-dev \
    && rm -rf /var/cache/apk/*

# å¤åˆ¶ä¾èµ–æ–‡ä»¶
COPY requirements.txt .

# å®‰è£…Pythonä¾èµ–ï¼ˆä¼˜åŒ–ç‰ˆï¼‰
RUN pip install --no-cache-dir \
    python-telegram-bot==20.7 \
    aiohttp==3.9.1 \
    redis==5.0.1 \
    psycopg2-binary==2.9.9 \
    python-dotenv==1.0.0 \
    && pip cache purge

# å¤åˆ¶åº”ç”¨ä»£ç 
COPY . .

# åˆ›å»ºæ•°æ®ç›®å½•
RUN mkdir -p /app/data /app/logs

# è®¾ç½®érootç”¨æˆ·
RUN addgroup -g 1000 svs && \
    adduser -D -u 1000 -G svs svs && \
    chown -R svs:svs /app

USER svs

# ç¯å¢ƒå˜é‡
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONPATH=/app

# å¥åº·æ£€æŸ¥
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import sys; sys.exit(0)"

# å¯åŠ¨å‘½ä»¤
CMD ["python", "-u", "xiaoa_bot.py"]
