        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --pixel-darker: #0a0e27;
            --pixel-dark: #1a1f3a;
            --pixel-light: #e0e0e0;
            --pixel-primary: #00ff00;
            --pixel-accent: #00ffff;
            --pixel-warning: #ffff00;
            --pixel-danger: #ff0055;
            --pixel-grid: #333333;
        }

        body {
            font-family: 'Courier New', monospace;
            background: var(--pixel-darker);
            color: var(--pixel-light);
            overflow-x: hidden;
        }

        .container {
            max-width: 1280px;
            margin: 0 auto;
            padding: 2rem;
        }

        .hero {
            border: 3px solid var(--pixel-primary);
            background: var(--pixel-dark);
            padding: 2rem;
            margin-bottom: 2rem;
            position: relative;
        }

        .hero::before {
            content: '';
            position: absolute;
            top: -8px;
            left: 10px;
            background: var(--pixel-darker);
            padding: 0 10px;
            color: var(--pixel-primary);
        }

        .hero-title {
            font-size: 2.5rem;
            color: var(--pixel-primary);
            margin-bottom: 0.5rem;
            text-shadow: 0 0 10px var(--pixel-primary);
        }

        .hero-subtitle {
            color: var(--pixel-accent);
            font-size: 1.2rem;
            margin-bottom: 1rem;
        }

        .tags {
            display: flex;
            gap: 0.5rem;
            margin-bottom: 1rem;
            flex-wrap: wrap;
        }

        .tag {
            border: 2px solid var(--pixel-primary);
            padding: 0.25rem 0.75rem;
            font-size: 0.8rem;
            background: transparent;
            color: var(--pixel-primary);
        }

        .tag.accent {
            border-color: var(--pixel-accent);
            color: var(--pixel-accent);
        }

        .tag.warning {
            border-color: var(--pixel-warning);
            color: var(--pixel-warning);
        }

        .buttons {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
        }

        .btn {
            border: 2px solid var(--pixel-primary);
            background: transparent;
            color: var(--pixel-primary);
            padding: 0.5rem 1rem;
            cursor: pointer;
            font-family: 'Courier New', monospace;
            transition: all 0.2s;
        }

        .btn:hover {
            background: var(--pixel-primary);
            color: var(--pixel-darker);
            box-shadow: 0 0 20px var(--pixel-primary);
        }

        .section {
            margin-bottom: 2rem;
        }

        .section-title {
            font-size: 1.2rem;
            color: var(--pixel-primary);
            margin-bottom: 1rem;
            border-bottom: 2px solid var(--pixel-primary);
            padding-bottom: 0.5rem;
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
        }

        .card {
            border: 2px solid var(--pixel-grid);
            background: var(--pixel-dark);
            padding: 1rem;
            transition: all 0.2s;
        }

        .card:hover {
            border-color: var(--pixel-primary);
            box-shadow: 0 0 10px var(--pixel-primary);
        }

        .card-title {
            color: var(--pixel-accent);
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }

        .card-value {
            font-size: 1.5rem;
            color: var(--pixel-primary);
            margin-bottom: 0.5rem;
        }

        .card-label {
            font-size: 0.75rem;
            color: var(--pixel-light);
            opacity: 0.7;
        }

        .dos-window {
            border: 3px solid var(--pixel-primary);
            background: var(--pixel-dark);
            margin-bottom: 1rem;
        }

        .dos-title {
            background: var(--pixel-primary);
            color: var(--pixel-darker);
            padding: 0.25rem 0.5rem;
            font-weight: bold;
            font-size: 0.9rem;
        }

        .dos-content {
            padding: 1rem;
        }

        .dos-line {
            margin-bottom: 0.5rem;
            border-bottom: 1px solid var(--pixel-grid);
            padding-bottom: 0.5rem;
        }

        .dos-line:last-child {
            border-bottom: none;
        }

        .emoji {
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        .warning-box {
            border: 3px solid var(--pixel-danger);
            background: rgba(255, 0, 85, 0.1);
            padding: 1rem;
            margin-top: 2rem;
        }

        .warning-title {
            color: var(--pixel-danger);
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .warning-text {
            font-size: 0.9rem;
            color: var(--pixel-light);
        }

        .scanlines {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            background: repeating-linear-gradient(
                0deg,
                rgba(0, 0, 0, 0.15),
                rgba(0, 0, 0, 0.15) 1px,
                transparent 1px,
                transparent 2px
            );
            z-index: 1000;
        }

        @media (max-width: 768px) {
            .hero-title {
                font-size: 1.8rem;
            }

            .grid {
                grid-template-columns: 1fr;
            }

            .buttons {
                flex-direction: column;
            }
        }
    </style>
</head>
