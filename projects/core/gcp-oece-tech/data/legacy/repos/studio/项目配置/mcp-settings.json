{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/svs/studio",
        "/mnt/external-ssd"
      ],
      "description": "文件系统操作 - 项目文件和外挂盘访问"
    },
    "github-mcp-server": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "ghp_YOUR_TOKEN_HERE"
      },
      "description": "GitHub操作 - 自动push/pull/创建PR等"
    },
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "description": "知识图谱 - 记忆管理和上下文保持"
    },
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "description": "复杂推理 - 多步骤问题解决"
    },
    "supabase-mcp-server": {
      "command": "npx",
      "args": [
        "-y",
        "@shinework/supabase-mcp-server"
      ],
      "env": {
        "SUPABASE_ACCESS_TOKEN": "YOUR_SUPABASE_ACCESS_TOKEN_HERE"
      },
      "description": "Supabase数据库操作 - SQL执行、Migration管理"
    }
  },
  "notes": {
    "setup_instructions": [
      "1. 复制此文件内容",
      "2. 在Windsurf中: Settings → MCP Servers",
      "3. 添加每个服务器配置",
      "4. 替换YOUR_TOKEN_HERE为真实token",
      "5. 重启Windsurf生效"
    ],
    "token_locations": {
      "GITHUB_PERSONAL_ACCESS_TOKEN": "https://github.com/settings/tokens/new (需要repo + workflow权限)",
      "SUPABASE_ACCESS_TOKEN": "Supabase Dashboard → Project Settings → API → Access Tokens"
    },
    "verification": [
      "测试命令: 在Cascade中输入",
      "1. '列出可用的MCP工具' - 应显示5个服务器",
      "2. '使用filesystem读取package.json' - 应返回项目依赖",
      "3. '使用supabase查询users表前5条' - 应返回用户数据",
      "4. '使用github列出最近5次commit' - 应返回提交历史"
    ]
  }
}
