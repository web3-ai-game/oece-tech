{
  "contextOptimization": {
    "maxTokens": 8192,
    "compressionLevel": "aggressive",
    "strategies": {
      "tokenCompression": {
        "enabled": true,
        "removeComments": true,
        "minifyCode": true,
        "truncateLongStrings": true,
        "compressWhitespace": true
      },
      "contextPruning": {
        "enabled": true,
        "keepRecentFiles": 5,
        "maxFileSize": 10000,
        "excludePatterns": [
          "*.min.js",
          "*.min.css",
          "node_modules/**",
          "*.lock",
          "*.log"
        ]
      },
      "smartCaching": {
        "enabled": true,
        "cachePath": "/Volumes/128/windsurf-context-cache",
        "cacheSize": "100MB",
        "ttl": 3600
      },
      "incrementalContext": {
        "enabled": true,
        "onlyChangedFiles": true,
        "deltaEncoding": true
      }
    },
    "priorityFiles": [
      "project-config.json",
      "package.json",
      "tsconfig.json",
      ".env"
    ],
    "autoInclude": {
      "relatedFiles": true,
      "importedModules": false,
      "testFiles": false
    }
  },
  "memoryOptimization": {
    "useExternalStorage": true,
    "storagePath": "/Volumes/128/windsurf-memory",
    "compressHistory": true,
    "maxHistorySize": "50MB"
  }
}
