{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem"],
      "config": {
        "directories": [
          "/Users/svs.loline/Documents/xiangmu/hotel-inistel",
          "/Volumes/128"
        ]
      }
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "config": {
        "maxMemorySize": "100MB",
        "persistPath": "/Volumes/128/mcp-memory/knowledge.json"
      }
    },
    "notion": {
      "command": "npx",
      "args": ["@notionhq/mcp-server"],
      "env": {
        "NOTION_API_KEY": "${NOTION_API_KEY}"
      },
      "config": {
        "databases": {
          "tasks": "c81a1b1e-5865-4e6d-b1e5-3eb453768366",
          "code_library": "b6d5090a-4595-41ca-99a2-7b46cdc14641"
        }
      }
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "config": {
        "maxThoughts": 20,
        "thinkingDepth": 3
      }
    },
    "puppeteer": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-puppeteer"],
      "config": {
        "headless": true,
        "defaultViewport": {
          "width": 1280,
          "height": 800
        }
      }
    }
  },
  "optimizations": {
    "memory": {
      "enabled": true,
      "maxContextSize": 8192,
      "compressionLevel": "high",
      "useExternalStorage": true,
      "storagePath": "/Volumes/128/mcp-cache"
    },
    "performance": {
      "parallelTools": true,
      "cacheResponses": true,
      "lazyLoading": true,
      "streamingOutput": true
    },
    "accuracy": {
      "useSequentialThinking": true,
      "verifyOutputs": true,
      "crossReferenceNotion": true,
      "contextRetrieval": "smart"
    }
  },
  "windsurf": {
    "modelEnhancements": {
      "useStructuredOutput": true,
      "templateMatching": true,
      "codeValidation": true,
      "autoCorrection": true
    },
    "knowledgeBase": {
      "notionIntegration": true,
      "localCache": "/Volumes/128/windsurf-kb",
      "syncInterval": 300
    },
    "contextManagement": {
      "maxTokens": 8192,
      "priorityFiles": [
        "project-config.json",
        "README.md",
        ".env"
      ],
      "autoInclude": [
        "package.json",
        "tsconfig.json"
      ]
    }
  }
}
