{
  "version": "2.0.0",
  "description": "UI数字资产库MCP增强配置",
  "ui_assets": {
    "enabled": true,
    "base_path": "./hotel-ui/",
    "github_repo": "https://github.com/svsbeta/hotel-ui",
    "priority": "highest",
    "cache_enabled": true,
    "cache_ttl": 3600
  },
  "indexing": {
    "auto_scan": true,
    "deep_analysis": true,
    "file_types": [".svg", ".tsx", ".jsx", ".css", ".html", ".js", ".ts"],
    "exclude_dirs": ["node_modules", ".git", "dist", "build"]
  },
  "search_categories": {
    "components": {
      "path": "hotel-ui/ui-kit/",
      "keywords": ["button", "card", "modal", "input", "navigation", "layout"],
      "priority": "high"
    },
    "react_components": {
      "path": "hotel-ui/frontend/src/components/",
      "keywords": ["auth", "hero", "features", "stats", "testimonials"],
      "priority": "high"
    },
    "digital_assets": {
      "path": "hotel-ui/digital-assets/",
      "keywords": ["icons", "backgrounds", "svg", "hospitality", "gaming", "finance"],
      "priority": "medium"
    },
    "games": {
      "path": "hotel-ui/game-pool/",
      "keywords": ["slot", "airdrop", "predict", "casino", "interactive"],
      "priority": "medium"
    },
    "web3": {
      "path": "hotel-ui/web3-components/",
      "keywords": ["trading", "defi", "crypto", "charts", "algorithms"],
      "priority": "medium"
    }
  },
  "smart_suggestions": {
    "hotel_management": {
      "components": ["hotel-ui/ui-kit/base/Card.tsx", "hotel-ui/ui-kit/base/Button.tsx"],
      "icons": ["hotel-ui/digital-assets/icons/hospitality/"],
      "backgrounds": ["hotel-ui/digital-assets/backgrounds/geometric/"]
    },
    "dashboard": {
      "components": ["hotel-ui/frontend/src/components/Stats/", "hotel-ui/frontend/src/components/Layout/"],
      "assets": ["hotel-ui/digital-assets/icons/finance/stock-charts.svg"]
    },
    "authentication": {
      "components": ["hotel-ui/frontend/src/components/Auth/", "hotel-ui/frontend/src/pages/LoginPage.tsx"],
      "styles": ["hotel-ui/web3-components/styles/main.css"]
    }
  },
  "integration_templates": {
    "react_import": "import { {component} } from './hotel-ui/{path}';",
    "css_import": "@import './hotel-ui/{path}';",
    "svg_import": "import {name} from './hotel-ui/{path}';",
    "iframe_embed": "<iframe src=\"./hotel-ui/{path}\" width=\"{width}\" height=\"{height}\"></iframe>"
  }
}
