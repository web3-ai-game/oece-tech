{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "setup-ssh",
      "type": "shell",
      "command": "bash",
      "args": ["${workspaceFolder}/check_ssh.sh"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Load Environment",
      "type": "shell",
      "command": "source ${workspaceFolder}/setup_env.sh && echo '✓ 环境已加载'",
      "presentation": {
        "echo": true,
        "reveal": "always"
      }
    },
    {
      "label": "Test Doppler",
      "type": "shell",
      "command": "source ${workspaceFolder}/setup_env.sh && doppler_test",
      "presentation": {
        "echo": true,
        "reveal": "always"
      }
    }
  ]
}
