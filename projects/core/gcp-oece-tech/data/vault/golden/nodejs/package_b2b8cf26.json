{
  "name": "svs-mcp",
  "version": "1.0.0",
  "description": "SVS-MCP - AI-Powered Web3 Knowledge Platform",
  "main": "index.js",
  "scripts": {
    "setup": "bash scripts/setup.sh",
    "install:all": "npm install && cd shared && npm install && cd ../services/knowledge-base && npm install && cd ../aibot && npm install && cd ../ai-tools && npm install && cd ../forum && npm install",
    "dev": "pm2 start ecosystem.config.js --env development",
    "start": "pm2 start ecosystem.config.js --env production",
    "stop": "pm2 stop ecosystem.config.js",
    "restart": "pm2 restart ecosystem.config.js",
    "logs": "pm2 logs",
    "monit": "pm2 monit",
    "health-check": "bash scripts/health-check.sh",
    "monitor": "bash scripts/monitor.sh",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:build": "docker compose build",
    "docker:logs": "docker compose logs -f",
    "docker:ps": "docker compose ps",
    "docker:restart": "docker compose restart"
  },
  "keywords": [
    "mcp",
    "ai",
    "knowledge-base",
    "forum",
    "web3",
    "containerized"
  ],
  "author": "web3-ai-game",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  }
}
